<div class="banner mb-4 d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('cover.jpg') %>);">
  <div class="container">
    <h1>Lists</h1>

  </div>
</div>

<%= link_to 'New List', new_list_path %>


   <% @lists.each do |list| %>
    <div class="co-12 col-sm-6 col-md-4 mb-3 ">
     <%= link_to list_path(list) do  %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpg') %>)"><%= list.name %></div>
     <% end %>
    </div>
   <% end %>

</div>
